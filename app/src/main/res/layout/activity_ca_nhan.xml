<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6DBDF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CaNhan_imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_goback"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:text="Về giao diện chính"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    //Line den ngan cach

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></TextView>

    //Title
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#949494"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/black_border"
                android:paddingTop="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_100x100"></ImageView>
        </LinearLayout>
    </LinearLayout>


    //Vùng thông tin

    <ScrollView
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:background="@drawable/black_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã BHYT của bạn:"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/CaNhan_tvMaBHYT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textAlignment="center"
                android:textSize="25dp"></TextView>

            //Thanh den
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginBottom="5dp"></TextView>


            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Họ tên:"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/CaNhan_tvHoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textAlignment="center"
                android:textSize="20dp"></TextView>

            //Thanh den
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginBottom="5dp"></TextView>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày tháng năm sinh:"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/CaNhan_tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:textAlignment="center"
                    android:textSize="20dp"></TextView>
                <TextView
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Tuổi:"></TextView>
                <TextView
                    android:id="@+id/CaNhan_tvTuoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="99"></TextView>
            </LinearLayout>

            //Thanh den
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginBottom="5dp"></TextView>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/CaNhan_tvSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000000000"
                android:textAlignment="center"
                android:textSize="20dp"></TextView>

            //Thanh den
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginBottom="5dp"></TextView>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/CaNhan_tvDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textAlignment="center"
                android:textSize="20dp"></TextView>

            <Button
                android:layout_marginBottom="15dp"
                android:background="@drawable/black_border"
                android:layout_marginLeft="15dp"
                android:id="@+id/CaNhan_btnXemBenhAn"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Xem bệnh án"></Button>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
