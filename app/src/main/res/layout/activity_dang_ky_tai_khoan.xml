<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    //Thanh quay ve
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <ImageView
                android:id="@+id/DangKy_imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_goback"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Về giao diện chính"
                android:textSize="20dp"
                android:paddingTop="5dp"></TextView>
    </LinearLayout>
    //TextView thanh den ngang
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></TextView>
    //Title
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#949494">
            <TextView
                android:paddingTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐĂNG KÝ"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"></TextView>
        </LinearLayout>
    </LinearLayout>
    //TextView thanh den ngang
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></TextView>

    //Vung nhap thong tin dang ky
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                            //Nhap ma bhyt
                            <TextView
                                android:paddingTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Nhập mã bảo hiểm y tế"></TextView>
                            <EditText
                                android:id="@+id/Dangky_edtMaBHYT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/black_border"></EditText>
                            <Button
                                android:id="@+id/Dangky_btnKiemTra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="KIỂM TRA HỢP LỆ"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"></Button>
                            <TextView
                                android:id="@+id/Dangky_TvKetQuaKiemTra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RESULT HERE"
                                android:textAlignment="center"
                                android:textColor="#B22222"></TextView>
                            //Nhap mat khau
                            <TextView
                                android:paddingTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Nhập mật khẩu"></TextView>
                            <EditText
                                android:inputType="textPassword"
                                android:id="@+id/Dangky_edtMatKhau"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/black_border"></EditText>
                            //Nhap mat khau lan 2
                            <TextView
                                android:paddingTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Nhập lại mật khẩu phía trên"></TextView>
                            <EditText
                                android:inputType="textPassword"
                                android:id="@+id/Dangky_edtMatKhau2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/black_border"></EditText>
                            //Nhap ho
                            <TextView
                                android:paddingTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Nhập họ"></TextView>
                            <EditText
                                android:id="@+id/Dangky_edtHo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/black_border"></EditText>
                            //Nhap ten
                            <TextView
                                android:paddingTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Nhập tên"></TextView>
                            <EditText
                                android:id="@+id/Dangky_edtTen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/black_border"
                                android:textAlignment="center"
                                android:textSize="20dp"></EditText>

                        //Chon ngay thang nam sinh

                        <TextView
                                android:paddingTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Ngày tháng năm sinh"></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày:"></TextView>
                            <EditText
                                android:textAlignment="center"
                                android:id="@+id/Dangky_edtNgay"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"></EditText>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tháng:"></TextView>
                            <EditText
                                android:textAlignment="center"
                                android:id="@+id/Dangky_edtThang"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"></EditText>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Năm:"></TextView>
                            <EditText
                                android:textAlignment="center"
                                android:id="@+id/Dangky_edtNam"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"></EditText>
                        </LinearLayout>


                        //Nhap so dien thoai
                        <TextView
                            android:paddingTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Nhập số điện thoại liên lạc"></TextView>
                        <EditText
                            android:id="@+id/Dangky_edtSoDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="@drawable/black_border"></EditText>
                        //Nhap dia chi
                        <TextView
                            android:paddingTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Nhập địa chỉ cư trú"></TextView>
                        <EditText
                            android:id="@+id/Dangky_edtDiaChi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="@drawable/black_border"></EditText>

                        <Button
                            android:id="@+id/Dangky_btnDangKy"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ĐĂNG KÝ"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="30dp"></Button>
                    </LinearLayout>
            </ScrollView>
    </LinearLayout>


</LinearLayout>